<section class="section">
  <div class="container">
    <div class="columns">
      <div class="column"></div>
      <div class="column">
        <%= form_tag '/login' do %>
          <div class="field is-vertical">
            <%= content_tag(:p, flash[:error], class: "help is-danger") if flash[:error] %>
            <div class="field">
              <div class="label">
                <%= label_tag :username, nil, class: "label" %>
              </div>
              <div class="field-body">
                <div class="field">
                  <div class="control">
                    <%= text_field_tag :username, "user", class: "input is-focused #{"is-danger" if flash[:error]}" %>
                  </div>
                </div>
              </div>
            </div>
            <div class="field">
              <div class="label">
                <%= label_tag :password, nil, class: "label" %>
              </div>
              <div class="field-body">
                <div class="field">
                  <div class="control">
                    <%= password_field_tag :password, "passw0rd", class: "input is-focused #{"is-danger" if flash[:error]}" %>
                  </div>
                </div>
              </div>
            </div>
            <div class="field is-horizontal">
            <div class="field-label">
              <!-- Left empty for spacing -->
            </div>
            <div class="field-body">
              <div class="field">
                <div class="control">
                  <%= submit_tag 'Login', class: "button is-primary" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="column"></div>
  </div>
</section>
